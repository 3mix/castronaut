<% unless presenter.messages.empty? %>
  <h4 class="flash"><%= presenter.messages.to_s %></h4>
<% end %>

<div id="left">
  <div class="content_div index_div">
    <form method="post" action="/login">
      <p>
        <strong>Please login to continue</strong>
      </p>
      <p>
        <label for="username">Username</label><br />
        <input name="username" id="username" type="text" autocomplete="off" />
      </p>
      <p>
        <label for="password">Password</label><br />
        <input name="password" id="password" type="password" />
      </p>
      <p>
        <br /><input type="submit" value="Login" />
      </p>
      <input type="hidden" name="lt" id="lt" value="<%= presenter.login_ticket.ticket %>" />
      <input type="hidden" name="service" id="service" value="<%= presenter.service %>" />
    </form>
  </div>
</div>
